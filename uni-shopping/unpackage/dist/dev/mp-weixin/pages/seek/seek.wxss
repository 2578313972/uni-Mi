
view,scroll-view,swiper,swiper-item{box-sizing: border-box;}
#main{margin: 0rpx;}
.img{width: 100%;height: 100%;}
.hot>view:first-child{font-size: 30rpx;font-weight: 600;padding-left: 15rpx;line-height: 80rpx;}
.hot>view:nth-child(2){width: 100%;height: 260rpx;background-color: skyblue;}
.hot>view:nth-child(3){display: -webkit-box;display: -webkit-flex;display: flex;-webkit-flex-wrap: wrap;flex-wrap: wrap;padding-top: 15rpx;}
.hot>view:nth-child(3)>view{padding: 10rpx;margin: 10rpx 15rpx;}
.hot>view:nth-child(3) .pink{border: 4rpx solid #EFCCCE;background-color: #F8EAE9;}
.hot>view:nth-child(3) .blue{border: 4rpx solid #A9D7D9;background-color: #E8F6F6;}
.hot>view:nth-child(3) .green{border: 4rpx solid #C4D1AA;background-color: #F2F6E8;}
.offset{margin-top: 15rpx;}
.offset>view:first-child{font-size: 30rpx;font-weight: 600;padding-left: 15rpx;line-height: 70rpx;}
.offset>view:last-child{display: -webkit-box;display: -webkit-flex;display: flex;-webkit-flex-wrap: wrap;flex-wrap: wrap;padding-top: 15rpx;}
.offset>view:last-child>view{padding: 10rpx;margin: 10rpx 15rpx;border: 4rpx solid #F5F5F5;color: #727272;background-color: #F5F5F5;}
.select>view:nth-child(2){font-weight: 600;}
.select>view:not(:first-child){border-bottom: 2rpx solid #F8F8F8;line-height: 70rpx;padding-left: 20rpx;font-size: 30rpx;}


